<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.MainMenu">
    <StackLayout Background="#2196F3" Padding="20">

        <Label Text="ForceWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="70"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>


        <StackLayout Orientation="Vertical" 
                     VerticalOptions="CenterAndExpand" Spacing="50">

            <Button x:Name="Tracker" 
                    Text="Tracker" 
                    FontSize="25"
                    TextColor="White" 
                    Clicked="Tracker_OnClicked"
                    BackgroundColor="#1dabf0" />

            <Button x:Name="WorkoutList" 
                    Text="Workout List" 
                    FontSize="25"
                    TextColor="White" 
                    Clicked="WorkoutList_OnClicked"
                    BackgroundColor="#1dabf0" />

        </StackLayout>
    </StackLayout>
</ContentPage>