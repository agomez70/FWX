<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.KettlebellEquipmentList">
    <StackLayout Background="#2196F3" Padding="20, 30, 20, 20">

        <Label Text="KettlebellsWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="58"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>
        <StackLayout>
            <ListView x:Name="KettlebellListView" HasUnevenRows="True"
                      ItemSelected="OnKettlebellSelected" IsVisible="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell
                            ImageSource="{Binding WorkoutImage}"
                            Text="{Binding WorkoutName}" TextColor="White" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>