<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.BallEquipmentList">
    <StackLayout Background="#2196F3" Padding="20, 30, 20, 20">

        <Label Text="BallWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="68"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>
        <StackLayout>
            <ScrollView>
            <ListView x:Name="ballListView" HasUnevenRows="True"
                      ItemSelected="OnBallSelected" IsVisible="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
                        ImageSource="{Binding WorkoutImage}"
                        Text="{Binding WorkoutName}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            </ScrollView>
        </StackLayout>
    </StackLayout>
</ContentPage>