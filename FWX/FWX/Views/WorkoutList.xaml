<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.WorkoutList">
    <StackLayout Background="#2196F3" Padding="20">

        <Label Text="WorkoutWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="50"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>

        <StackLayout VerticalOptions="CenterAndExpand" Spacing="20">

            <Button x:Name="EquipmentButton" 
                    FontSize="25" 
                    Text="Equipment" 
                    Clicked="EquipmentButton_OnClicked"
                    TextColor="White"
                    BackgroundColor="#1dabf0"/>
            <Button x:Name="MuscleGroupButton" 
                    FontSize="25" 
                    Text="Muscle Group" 
                    Clicked="MuscleGroupButton_OnClicked"
                    TextColor="White"
                    BackgroundColor="#1dabf0"/>

        </StackLayout>
    </StackLayout>

</ContentPage>