<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.MuscleGroupList">
    <StackLayout Background="#2196F3" Padding="20">

        <Label Text="MuscleGroupWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="48"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>

        <ContentView HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Picker x:Name="MuscleGroupPicker" Title="Muscle Group" HorizontalTextAlignment="Center" FontSize="50"
                    BackgroundColor="#1dabf0" TextColor="White"/>
        </ContentView>

    </StackLayout>
    </ContentPage>