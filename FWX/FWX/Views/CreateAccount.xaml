<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWX.Views.CreateAccount">
    <StackLayout Background="#2196F3" Padding="20">

        <Label Text="Create an AccountWX"
               HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="50"
               FontAttributes="Bold"/>

        <BoxView Color="Black" HeightRequest="2"/>




        <StackLayout Orientation="Vertical" Spacing="50" VerticalOptions="CenterAndExpand" >

            <Entry x:Name="EmailEntry" 
                   Text="" 
                   HorizontalTextAlignment="Center"
                   Placeholder="Email"/>

            <Entry x:Name="PasswordEntry" 
                   Text=""
                   HorizontalTextAlignment="Center"
                   Placeholder="Password" 
                   IsPassword="True"/>
            <Button x:Name="RegisterButton"
                    Clicked="RegisterButton_OnClicked"
                    Text="Register" 
                    FontSize="25"
                    TextColor="White"
                    BackgroundColor="#1dabf0" />
        </StackLayout>
    </StackLayout>
</ContentPage>